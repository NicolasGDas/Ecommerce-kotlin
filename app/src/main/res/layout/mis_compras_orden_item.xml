<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOrdenItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtNumeroOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orden #001"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtCantProductosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="15dp"
            android:text="Cantidad de Productos"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toTopOf="@+id/txtTotalLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txtNumeroOrden"
            app:layout_constraintTop_toTopOf="@+id/txtNumeroOrden" />

        <TextView
            android:id="@+id/txtTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Total"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toTopOf="@+id/txtEntregadoALabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtCantProductosLabel"
            app:layout_constraintTop_toBottomOf="@+id/txtCantProductosLabel" />

        <TextView
            android:id="@+id/txtEntregadoALabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Entregado a"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toTopOf="@+id/txtDireccionLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtTotalLabel"
            app:layout_constraintTop_toBottomOf="@+id/txtTotalLabel" />

        <TextView
            android:id="@+id/txtDireccionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DirecciÃ³n"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txtEntregadoALabel"
            app:layout_constraintTop_toBottomOf="@+id/txtEntregadoALabel" />

        <TextView
            android:id="@+id/txtCantProductosValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="1"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toTopOf="@+id/txtTotalValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtCantProductosLabel"
            app:layout_constraintTop_toTopOf="@+id/txtCantProductosLabel" />

        <TextView
            android:id="@+id/txtTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="$$$$"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toTopOf="@+id/txtEntregadoAValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtTotalLabel"
            app:layout_constraintTop_toTopOf="@+id/txtTotalLabel" />

        <TextView
            android:id="@+id/txtEntregadoAValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtEntregadoALabel"
            app:layout_constraintTop_toTopOf="@+id/txtEntregadoALabel" />

        <TextView
            android:id="@+id/txtDireccionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address 123 A"
            android:textColor="@color/font_soft_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtDireccionLabel"
            app:layout_constraintTop_toTopOf="@+id/txtDireccionLabel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>