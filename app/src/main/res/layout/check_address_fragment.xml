<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chkAdress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CheckAddressFragment">

    <TextView
        android:id="@+id/textViewAddAddress"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounde_corner_blue"
        android:gravity="center"
        android:text="AÃ±adir Domicilio"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxMoto"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="354dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounde_corner_blue"
        android:text="Envio por moto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxPasoBuscar"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="354dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/rounde_corner_blue"
        android:checked="false"
        android:text="Lo paso a buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonContinue"
        android:layout_width="356dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#42BF65"
        android:text="Continuar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="311dp"
        android:layout_height="106dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounde_corner_blue"
        android:text="Domicilio de envio"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adressValue"
        android:layout_width="281dp"
        android:layout_height="41dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="332dp"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnUpdateDireccion"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="288dp"
        android:layout_marginBottom="48dp"
        android:background="@null"
        android:clickable="true"
        android:outlineProvider="none"
        android:src="@drawable/ic_baseline_edit_24"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAddress"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="408dp"
        android:clickable="true"
        android:outlineProvider="none"
        android:src="@drawable/ic_baseline_add_24"
        app:backgroundTint="@android:color/transparent"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle_checkout"
        android:gravity="center"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/white_circle_checkout"
        android:gravity="center"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/white_circle_checkout"
        android:gravity="center"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="76dp"
        android:layout_height="39dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/textView29"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#95AFF1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_marginTop="68dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/textView30"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#95AFF1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView43"
        android:layout_width="118dp"
        android:layout_height="14dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="Metodo de envio"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="118dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Metodo de pago"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView43"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="71dp"
        android:layout_height="18dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:text="Confirmar"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView44"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

</androidx.constraintlayout.widget.ConstraintLayout>